<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/bs/assets/ico/favicon.png">

    <title>i2CAT AVMixer</title>

    <!-- Bootstrap core CSS -->
    <link href="/bs/dist/css/bootstrap.css" rel="stylesheet">
    <!-- Bootstrap theme -->
    <link href="/bs/dist/css/bootstrap-theme.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/theme.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Mixer</a>
        </div>
        <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-left" action="/app/videoMixer" method="get">
            <button type="submit" class="btn btn-default btn-sm">Video Mixer</button>
          </form>
          <form class="navbar-form navbar-left" action="/app/audioMixer" method="get">
            <button type="submit" class="btn btn-default btn-sm">Audio Mixer</button>
          </form>
          <form class="navbar-form navbar-right" action="/app/stop" method="post">
            <button type="submit" class="btn btn-danger btn-sm">Stop</button>
          </form>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
      <div class="col-md-6"> <!-- INPUT STREAMS -->
        <div class="page-header">
          <h1>Input streams</h1> 
        </div>
        <div class="col-md-12"> <!--Input streams panel group column -->
          <br>
          {{ dhash.size }}
          <br>
          {{ dhash }}
          {% for item in dhash.channels %}
            {{ item.id }}
            <br>
            {{ item.type }}
            <br>
          {% endfor %}
          <br>
          {{ dhash.freeChannels }}
        </div> <!--OUTPUT STREAMS-->
      </div> <!-- /container -->
    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/bs/assets/js/jquery.js"></script>
    <script src="/bs/dist/js/bootstrap.min.js"></script>
    <script src="/bs/assets/js/holder.js"></script>
    <script type="text/javascript">
      function set_grid(id){
        // $.post("/app/grid", { id: id });
        $.ajax({
          type: 'POST',
          url: "/app/grid",
          data: "id=" + id,
          async:false
        });
        location.reload();
      }
    </script>
    <script type="text/javascript">
      function set_output_grid(id){
        // $.post("/app/grid", { id: id });
        $.ajax({
          type: 'POST',
          url: "/app/output_grid",
          data: "id=" + id,
          async:false
        });
        location.reload();
      }
    </script>
    <script type="text/javascript">
      function videowall_demo(){
        // $.post("/app/grid", { id: id });
        $.ajax({
          type: 'POST',
          url: "/app/videowall_demo",
          async:false
        });
        location.reload();
      }
    </script>
    <script type="text/javascript">
      function showValue(str_id, crop_id, newValue) {
        id = "op_" + str_id + "_" + crop_id 
        document.getElementById(id).value=newValue;
      }
    </script>
  </body>
</html>

