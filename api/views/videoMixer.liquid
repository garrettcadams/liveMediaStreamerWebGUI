<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/bs/assets/ico/favicon.png">

    <title>Video Mixer</title>

    <!-- Bootstrap core CSS -->
    <link href="/bs/dist/css/bootstrap.css" rel="stylesheet">
    <!-- Bootstrap theme -->
    <link href="/bs/dist/css/bootstrap-theme.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/theme.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">AV Mixer</a>
        </div>
        <div class="navbar-collapse collapse">
          <form class="navbar-form navbar-left" action="/app/videomixer">
            <button type="submit" class="btn btn-default btn-sm">Video</button>
          </form>
          <form class="navbar-form navbar-left" action="/app/audiomixer">
            <button type="submit" class="btn btn-default btn-sm">Audio</button>
          </form>
          <form class="navbar-form navbar-left">
            <button type="submit" class="btn btn-default btn-sm">Statistics</button>
          </form>
          <form class="navbar-form navbar-right" action="/app/stop" method="post">
            <button type="submit" class="btn btn-danger btn-sm">Stop</button>
          </form>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-body">
          {% for channel in stateHash.channels %}
          <div class="col-md-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <table>
                	<tr>
                		<td style="width:400px;">
                			<h3 class="panel-title">
                  				Channel {{ forloop.index }} - Port {{ channel.id }}
                			</h3>
                		</td>
                		<td>
                			<form class="form" action="/app/videoMixer/{{forloop.index}}/rmSession" method="post">
                    		<button type="submit" class="btn btn-danger btn-xs">
                      			<span class="glyphicon glyphicon-remove"></span>
                    		</button>
                  		</form>
                  	</td>
        					</tr>
        				</table>
              </div>
              <div class="panel-body">
                <div class="row {% if channel.sourceType == 'other' %} is-disabled {% endif %}">
                  <div class="col-md-10">
                    <div class="row  is-disabled">
                      <div class="col-md-5 col-md-offset-7">
                        <form class="btn-group" action="/app/videoMixer/{{forloop.index}}/set_input_vbcc" method="post">
                        	<button style="width:112px;" type="submit" class="btn btn-default btn-block" name="vbcc" value="{% if channel.vbcc %}manual{% else %}auto{% endif %}">{% if channel.vbcc %} Manual {% else %} Auto {% endif %}</button>
                        </form>
                      </div>
                    </div>
                    <div class="row is-disabled">
                      <div class="col-md-7">
                        <div class="col-md-6 text-center">
                          <strong>Framerate</strong>
                        </div>
                        <div class="col-md-6 text-center">
                          {{ channel.fps_val }} 
                        </div>
                      </div>
                      <div class="col-md-5 text-center {% if channel.vbcc %} is-disabled {% endif %}">
                        <form class="btn-group" action="/app/videoMixer/{{forloop.index}}/set_input_fps" method="post">
	                        <div class="btn-group">
	                          <button type="submit" class="btn btn-default {% if channel.fps == 'H' %}active{% endif %}" name="fps" value="H">H</button>
	                          <button type="submit" class="btn btn-default {% if channel.fps == 'M' %}active{% endif %}" name="fps" value="M">M</button>
	                          <button type="submit" class="btn btn-default {% if channel.fps == 'L' %}active{% endif %}" name="fps" value="L">L</button>
	                        </div>
                      	</form>
                      </div>
                    </div>
                    <div class="row is-disabled">
                      <div class="col-md-7">
                        <div class="col-md-6 text-center">
                          <center><strong>Size</strong></center>
                        </div>
                        <div class="col-md-6 text-center">
                          <center>{{ channel.size_val }}</center>
                        </div>
                      </div>
                      <div class="col-md-5 text-center {% if channel.vbcc %} is-disabled {% endif %}">
                       	<form class="btn-group" action="/app/videoMixer/{{forloop.index}}/set_input_size" method="post">
	                        <div class="btn-group">
	                          <button type="submit" class="btn btn-default {% if channel.size == 'H' %}active{% endif %}" name="size" value="H">H</button>
	                          <button type="submit" class="btn btn-default {% if channel.size == 'M' %}active{% endif %}" name="size" value="M">M</button>
	                          <button type="submit" class="btn btn-default {% if channel.size == 'L' %}active{% endif %}" name="size" value="L">L</button>
	                        </div>
                        </form>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-7">
                        <div class="col-md-6 text-center">
                          <strong>Bitrate</strong>
                        </div>
                        <div class="col-md-6 text-center">
                          {{ channel.br_val }} 
                        </div>
                      </div>
                      <div class="col-md-5 text-center {% if channel.vbcc %} is-disabled {% endif %}">
                       	<form class="btn-group" action="/app/videoMixer/{{forloop.index}}/set_input_br" method="post">
	                        <div class="btn-group">
	                          <button type="submit" class="btn btn-default {% if channel.br == 'H' %}active{% endif %}" name="br" value="H">H</button>
	                          <button type="submit" class="btn btn-default {% if channel.br == 'M' %}active{% endif %}" name="br" value="M">M</button>
	                          <button type="submit" class="btn btn-default {% if channel.br == 'L' %}active{% endif %}" name="br" value="L">L</button>
	                        </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-1 text-center">
                    <input type="range" class="vertical_zoom" min="0" max="10" step="1" orient="vertical" />
                  </div>
                </div>
                <div class = "row">&nbsp;</div>
                <div class="row text-center">
                  <form class="btn-group" action="/app/videoMixer/{{channel.channel}}/commute" method="post">
                    <button type="submit" class="btn btn-default">CUT</button>
                  </form>
                  <form class="btn-group" action="/app/videoMixer/{{channel.channel}}/fade/500" method="post">
                    <button type="submit" class="btn btn-default">FADE1</button>
                  </form>
                  <form class="btn-group" action="/app/videoMixer/{{channel.channel}}/fade/1500" method="post">
                    <button type="submit" class="btn btn-default">FADE2</button>
                  </form>
                  <form class="btn-group">
                    <button type="submit" class="btn btn-default" disabled>EFF1</button>
                  </form>
                  <form class="btn-group">
                    <button type="submit" class="btn btn-default" disabled>EFF2</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
          {% for channel in (1..stateHash.maxChannels) offset:stateHash.channels.size%}
          <div class="col-md-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">
                  Channel {{ channel }} 
                </h3>
              </div>
              <div class="panel-body">
                <form class="form" role="form" action="/app/videoMixer/{{channel}}/addSession" method="post">
                  <div class="row">
                    <div class="col-sm-12 text-center">
                      <h4>Free Channel</h4>
                    </div>
                  </div>
                  <div class = "row">&nbsp;</div>
                  <div class="row">
                  <table>
                  	<tr>
                    	<td style="width:250px;">
                    		<div class="col-sm-12 text-center">
                      			<input type="numeric" class="form-control input-sm" name="sourceIP" placeholder="Source IP {{ channel }} (def.: localhost)">
                    		</div>
                    	</td>
                    	<td style="width:250px">
                    		<div class="col-sm-12 text-center">
                      			<input type="numeric" class="form-control input-sm" name="port" placeholder="Source {{ channel }}: Port to send">
                    		</div>
                    	</td>
                    </tr>
                  </table>  
                  </div>
                  <div class = "row">&nbsp;</div>
                  <div class="row">
                    <div class="col-sm-6 text-center">
                      <select class="form-control" name="sourceType">
                        <option value="none">Source Type</option>
                        <option value="ultragrid">ultragrid</option>
                        <option value="other">other</option>
                      </select>
                    </div>
                    <div class="col-sm-6 text-center">
                      <select class="form-control" name="codec">
                        <option value="none">Codec</option>
                        <option value="H264">H264</option>
                        <option value="VP8">VP8</option>
                      </select>
                    </div>
                  </div>
                  <div class = "row">&nbsp;</div>
                  <div class="row">
                    <div class="col-sm-12 text-center">
                      <button type="submit" class="btn btn-default">Add</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="col-md-6"> 
    <!-- Layout control panel -->
      <div class="panel panel-default">
        <div class="panel-body">
          <ul class="nav nav-tabs">
            <li><a href="grid2x2">Grid 2x2</a></li>
            <li><a href="grid3x3">Grid 3x3</a></li>
            <li><a href="grid4x4">Grid 4x4</a></li>
            <li><a href="gridPiP">PiP</a></li>
          </ul>
          <div class = "row">&nbsp;</div>
          <form class="navbar-form" action="/app/videoMixer/{{stateHash.grid.id}}/applyGrid" method="post">
            <div class="row">
              <div class="col-md-3 col-md-offset-1">
                <div class="row">
                  <img src="/image/{{stateHash.grid.id}}grid.jpg" class="img-responsive" alt="{{stateHash.grid.id}}" class="img-rounded">
                </div>
                <div class = "row"> &nbsp; </div>
                <div class="row">
                  <button type="submit" class="btn btn-default">Apply</button>
                </div>
              </div>
              <div class="col-md-7 col-md-offset-1">
              {% for position in stateHash.grid.positions %}
                <div class="row">
                  <strong>{{ position.id }}</strong>
                  <div class="btn-group">
                    <label class="btn btn-default">
                      <input type="radio" {% if position.channel == 0%} checked {% endif %} name="{{position.id}}" value="0">
                      <strong><span class="glyphicon glyphicon-remove"></span></strong>
                    </label>
                    {% for channel in stateHash.channels %}
                    <label class="btn btn-default">
                      <input type="radio" {% if position.channel == forloop.index%} checked {% endif %} name="{{position.id}}" value="{{forloop.index}}">
                      <strong>{{forloop.index}}</strong>
                    </label>
                    {% endfor %}
                    {% for channel in (1..stateHash.maxChannels) offset:stateHash.channels.size %}
                    <label class="btn btn-default" disabled>
                      <input type="radio">
                      <strong>{{channel}}</strong>
                    </label>
                    {% endfor %}
                  </div>
                </div>
                {% endfor %}
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">
                  Output
                </h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-10">
                    <div class = "row">&nbsp;</div>
                    <div class="row">
                      <div class="col-md-7">
                        <div class="col-md-8 text-center">
                          <strong>Frame rate</strong>
                        </div>
                        <div class="col-md-4 text-center">
                          25
                        </div>
                      </div>
                      <div class="col-md-5 text-center">
                        <div class="btn-group">
                          <button type="button" class="btn btn-default">H</button>
                          <button type="button" class="btn btn-default">M</button>
                          <button type="button" class="btn btn-default">L</button>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-7">
                        <div class="col-md-7 text-center">
                          <strong>Size</strong>
                        </div>
                        <div class="col-md-5 text-center">
                          1920x1080
                        </div>
                      </div>
                      <div class="col-md-5 text-center">
                        <div class="btn-group">
                          <button type="button" class="btn btn-default">H</button>
                          <button type="button" class="btn btn-default">M</button>
                          <button type="button" class="btn btn-default">L</button>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-7">
                        <div class="col-md-8 text-center">
                          <strong>Bitrate</strong>
                        </div>
                        <div class="col-md-4 text-center">
                          2000
                        </div>
                      </div>
                      <div class="col-md-5 text-center">
                        <div class="btn-group">
                          <button type="button" class="btn btn-default">H</button>
                          <button type="button" class="btn btn-default">M</button>
                          <button type="button" class="btn btn-default">L</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class = "row">&nbsp;</div>
                <div class="row text-center">
                  <form class="btn-group" >
                    <button type="submit" class="btn btn-default" disabled>CUTtoBLACK</button>
                  </form>
                  <form class="btn-group" >
                    <button type="submit" class="btn btn-default" disabled>FADEtoBLACK</button>
                  </form>
                </div>
              </div>
            </div>
            <div class = "row">&nbsp;</div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">
                  RTSP
                </h3>
              </div>
              <div class="panel-body">
                <form class="form" role="form" action="/app/addRTSPSession" method="post">
                  <input type="numeric" class="form-control input-sm" name="channel" placeholder="Mixer channel">
                  <div class = "row">&nbsp;</div>
                  <input type="text" class="form-control input-sm" name="uri" placeholder="URI">
                  <div class = "row">&nbsp;</div>
                  <button type="submit" class="btn btn-default">Add</button>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="panel panel-default">
              <div class="panel-body">
                {% for session in stateHash.sessions %}
                <h3>{{ session.id | upcase }}</h3>
                <h5>{{ session.uri }}</h5>
                {% endfor %}
              </div> 
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/bs/assets/js/jquery.js"></script>
    <script src="/bs/dist/js/bootstrap.min.js"></script>
    <script src="/bs/assets/js/holder.js"></script>
    <script src="/utils.js"></script>
  </body>
</html>